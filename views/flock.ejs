<style>
body {
  background: linear-gradient(0deg,rgba(255,255,255,1),rgba(255,255,255,0.5)),url('/images/front-page/ray-hennessy-233426.jpg') center center no-repeat;
  background-size: cover;
  /*padding: 5%;*/
}

#flock {
  padding: 5%;
  position: relative;
  width: 100%;
  height: 100%;
}

/* Image hover effects: https://codepen.io/nxworld/pen/ZYNOBZ */
.card-image {
  overflow: hidden;
}

.zoomblur:hover {
  -webkit-transform: scale(1.1);
	transform: scale(1.02);
  -webkit-filter: blur(2px);
	filter: blur(2px);
	-webkit-transition: .3s ease-in-out;
	transition: .3s ease-in-out;
}
</style>


<div id="flock" class="container container-fluid center">
  <div class="row">
    <h1>The Flock</h1>
  </div>

  <div class="row">
    <% for(var i = 0; i < flock.length; i++) { %>
      <div class="col s12 m4">
        <div class="card">
          <div class="card-image">
            <img class="zoomblur" src="<%= flock[i].thumbnail %>">
            <span class="card-title"><a href="/flock/<%= flock[i].url %>"><%= flock[i].name %></a></span>
          </div>
          <div class="card-content">
            <p><%= flock[i].desc %></p>
          </div>
        </div>
      </div>
    <% } %>
